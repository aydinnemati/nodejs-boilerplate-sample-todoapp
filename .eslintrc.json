{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-console": "error"
    },
    "ignorePatterns": [
      "node_modules"
    ],
    "overrides": [
        {
          "files": [ "src/**/*.js", "src/*.js" ]
        }
    ]
}
